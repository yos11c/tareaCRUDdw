<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_3"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.crudprogra.MainActivity">

    <Button
        android:id="@+id/btnOpcionRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="255dp"
        android:minHeight="48dp"
        android:onClick="onClick"
        android:text="Registrar Usuarios"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <Button
        android:id="@+id/btnConsultaLista"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick3"
        android:text="Consultar Lista de Usuarios " />

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick2"
        android:text="Consultar Usuario" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="376dp"
        android:layout_height="52dp"
        android:layout_marginTop="-199dp"
        android:text="CRUD AURORA"
        android:textAlignment="center"
        android:textColor="#8A143C"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="#9C27B0"
        android:textColorLink="#9C27B0"
        android:textSize="24sp" />


</LinearLayout>