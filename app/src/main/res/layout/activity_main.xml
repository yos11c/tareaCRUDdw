<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFEB3B"
    tools:context="com.example.myapplicationcrud.MainActivity">

    <Button
        android:id="@+id/btnOpcionRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="255dp"
        android:minHeight="48dp"
        android:onClick="onClick"
        android:shadowColor="#8E24AA"
        android:text="Registrar Usuarios"
        android:textColor="#F44336"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <Button
        android:id="@+id/btnConsultaLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#BEDCE0"
        android:onClick="onClick3"
        android:shadowColor="@android:color/background_dark"
        android:text="Consultar Lista de Usuarios"
        android:textColor="#F44336"
        android:textColorHighlight="#84FF03"
        android:textColorHint="#7CB342"
        android:textColorLink="#F40404" />

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick2"
        android:text="Consultar Usuario"
        android:textColor="#F44336"
        android:textColorLink="#009688" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="-250dp"
        android:text="CRUD Dweb"
        android:textAlignment="center"
        android:textColor="#8A143C"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="#9C27B0"
        android:textColorLink="#9C27B0"
        android:textSize="34sp" />

</LinearLayout>
